<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:clickable="true"
    >

    <RelativeLayout
        android:id="@+id/article_info_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/text_lightblue">
      <ImageView
          android:id="@+id/article_info_back"
          android:src="@drawable/img_xiangzuo_chang"
          android:layout_alignParentBottom="true"
          android:padding="20dp"
          android:layout_width="wrap_content"
          android:layout_height="72dp">
          
      </ImageView>
        <TextView

            android:id="@+id/article_info_titile"
            android:layout_toRightOf="@+id/article_info_back"
            android:layout_alignParentBottom="true"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:text="ペルソナ３ーリーロド" />
        <ImageView
            android:id="@+id/article_info_net"
            android:src="@drawable/img_wangluo"
            android:layout_toRightOf="@id/article_info_titile"
            android:layout_alignParentBottom="true"
            android:padding="25dp"

            android:layout_width="wrap_content"
            android:layout_height="72dp">

        </ImageView>
        <ImageView
            android:id="@+id/article_info_more"
            android:src="@drawable/img_gengduo"
            android:layout_toRightOf="@id/article_info_net"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="72dp">
        </ImageView>



    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/article_info_header"
        android:id="@+id/article_info_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        >
        <WebView
            android:id="@+id/article_info_details_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/article_info_details"
        android:id="@+id/article_info_interaction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/article_info_details_back"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:padding="16dp"
               android:src="@drawable/img_xiangzuo1"
               android:layout_height="match_parent"></ImageView>
           <ImageView
               android:id="@+id/article_info_details_forward"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:padding="16dp"
               android:src="@drawable/img_xiangyou1"
               android:layout_height="match_parent"></ImageView>
           <ImageView
               android:id="@+id/article_info_details_refresh"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:src="@drawable/img_huanyihuan"
               android:padding="16dp"
               android:layout_height="match_parent"></ImageView>
           <ImageView
               android:id="@+id/article_info_details_zan"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:padding="16dp"
               android:src="@drawable/img_xihuan_fen"
               android:layout_height="match_parent"></ImageView>
       </LinearLayout>
    </RelativeLayout>

</LinearLayout>